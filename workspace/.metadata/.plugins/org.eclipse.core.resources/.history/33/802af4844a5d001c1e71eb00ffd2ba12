#include <iostream>

using namespace std;

class Solution {
public:
	int eggDrop(int N, int K);
};


int main()
{
	Solution s;
	int N, K;

	cout << "Number of eggs : " << endl;
	cin >> N;
	cout << "Number of floors : " << endl;
	cin >> K;
	cout << s.eggDrop(N, K) << endl;

	return 0;
}
